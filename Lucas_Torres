// checks if an array is in order

int crescente(int l[], int n){
	if (n=1){
		return 1;
	}
	else{
		for (int i=1;i<n;i++){
			if (l[i]<l[i-1]){
				return 0;
			}
		}
		return 1;
	}
}


int main(int argc, char** argv) {
	int n;
	std::cin>>n;
	int x[n];
	for (int i=0;i<n;i++){
		std::cin >> x[i];
	}
	n=crescente(x,n);
	std::cout<<n;

}
